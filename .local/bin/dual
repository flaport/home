#!/usr/bin/env bash
xrandr --output DP-1 --off --output DP-2 --off --output DP-3 --off --output DP-4 --off --output DP-1-2 --off --output eDP-1 --off --output DP-1-3 --mode 1920x1200 --pos 0x0 --rotate normal --primary --output DP-1-1 --mode 1920x1200 --pos 1920x0 --rotate normal
wallpaper current # reset wallpaper
cat "/home/flaport/.local/bin/[DP-1-3]-[DP-1-1]" > "/home/flaport/.local/bin/last_screenlayout"
chmod u+x "/home/flaport/.local/bin/last_screenlayout"
