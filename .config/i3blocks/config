# separator_block_width
# short_text
# signal
# urgent
#

# global properties
#command=/usr/lib/i3blocks/$BLOCK_NAME
command=~/.scripts/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

# battery indicator
[battery/battery]
separator=true
interval=180

# volume indicator
[volume/volume]
separator=true
interval=180
