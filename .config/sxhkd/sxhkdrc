# decrease alpha of windows
super + a
    alpha set -5

# increase alpha of windows
super + A
    alpha set +5

# reload picom config
super + control + a
    kill -SIGUSR1 $(pidof picom)

# set alpha to 100%
super + control + A
    alpha set 100

# connect to already paired bluetooth device
super + b
    dmenu_bluetooth

