# number of updatable packages
pacmanstatus(){ # pacman
    num=$(pacman -Qu | wc -l)
    [ "$num" -gt 0 ] && echo "ïº $num"
}
pacmanstatus1(){ # pacman
    num=$(pacman -Qu | wc -l)
